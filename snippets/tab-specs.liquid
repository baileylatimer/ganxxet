{%- liquid
  assign output_tab = true
  if title == blank and content == blank
    assign output_tab = false
  endif
-%}

{% unless product.metafields.custom.specs == blank %}
<div class="product-block product-block--tab" {{ block.shopify_attributes }}>
    <div class="collapsibles-wrapper collapsibles-wrapper--border-bottom">
      <button type="button"
        class="label collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders collapsible--auto-height{% if force_open != blank %} is-open{% endif %}" aria-controls="Product-content-{{ id }}"
        {% if force_open != blank %}aria-expanded="true"{% endif %}>
        <h3 style="font-size: 1em; margin-bottom: 0;">Tech Specs</h3>
        {%- render 'collapsible-icons' -%}
      </button>
      <div id="Product-content-{{ id }}"
        class="collapsible-content collapsible-content--all{% if force_open != blank %} is-open{% endif %}"
        {% if force_open != blank %}style="height: auto;"{% endif %}>
        <div class="collapsible-content__inner rte">
          {{ content }}
        </div>
      </div>
    </div>
</div>
{% endunless %}